{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "strict": false
    }
  },
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "moduleDetection": "force",
    "noEmitOnError": true
  },
  "include": [
    "src/packages/**/*",
    "src/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app-example"
  ]
}